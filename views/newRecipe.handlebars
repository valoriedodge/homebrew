<div class="container" style="width:50%">
  <h1 style="text-align:center; margin:50px 0px;">New Recipe</h1>
  <form action="/recipes" method="post">
    <input type="hidden" id="numIng" name="numIng" value="4">
    <div class="form-group row">
      <label for="rName" class="col-sm-2 col-form-label">Recipe Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="rName" name="name" placeholder="Recipe name">
      </div>
    </div>
    <div class="form-group row">
      <label for="" class="col-sm-2 col-form-label">Ingredients</label>
      <div class="col-sm-10">
        <div class="form-group row text-muted style="text-position:bottom"">
        <!-- <small class="text-muted"> -->
          <label class="col-sm-2">
            e.g. 5
          </label>
          <label class="col-sm-3">
            cups
          </label>
          <label class="col-sm-7">
            Apple Must
          </label>
        </div>
        <div class="form-group row">
          <input type="number" min="0" class="col-sm-2" name="quantity1" id="quantity1">
          <input list="measurements" class="col-sm-3" name="measurement1" id="measurement1">
          <!-- <input list="ingredients" class="col-sm-7" name="ingredients1" id="ingredients1"> -->
